<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupItemAddRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_green_with_corners">

    <TextView
        android:id="@+id/popupItemAddTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="Add Item"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/popupItemAddEditTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popupItemAddTitle"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:background="@drawable/white_with_corners"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:maxLength="20"
        android:hint="Enter Title\n(max 20 characters)"/>

    <EditText
        android:id="@+id/popupItemAddEditTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popupItemAddEditTextTitle"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:background="@drawable/white_with_corners"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:maxLength="40"
        android:hint="Enter Description\n(max 40 characters)"/>

    <LinearLayout
        android:id="@+id/popupItemAddLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popupItemAddEditTextDescription"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/popupItemAddCancelButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="cancel"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/red_A200"
            android:gravity="center"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/popupItemAddAddButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ADD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green_A700"
            android:gravity="center"
            android:background="@color/transparent"/>


    </LinearLayout>




</RelativeLayout>